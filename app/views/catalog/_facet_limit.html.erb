<% facet_link = link_to(
   t('blacklight.search.facets.more'),
   params.permit().merge(
     :id => facet_field.key,
     :action=>"facet",
     :page => nil,
     :"facet.sort" => 'count'
   ),
   :class => "more_facets_link"
 )
 %>
 <ul class="facet-values list-unstyled">
   <% paginator = facet_paginator(facet_field, display_facet) %>
   <%= render_facet_limit_list paginator, facet_field.key %>

   <% unless paginator.last_page? || params[:action] == "facet" %>
 <li class="more_facets_link"><%= facet_link %></li>
   <% end %>
 </ul>